---
import Paragraph from "../shared/Paragraph.astro";

export interface Props {
  title: string;
  description: string;
  icon: string;
}

const { title, description, icon } = Astro.props;
---

<div
  class="group p-5 hover:bg-gray-100 dark:hover:bg-zinc-900 rounded bg-white dark:bg-stone-950  border sm:p-6 lg:p-8 rounded-sm relative overflow-hidden transition-colors duration-300"
>
  <div class="mt-6 space-y-4 relative">
    <div class="w-full flex justify-center items-center">
      <img src={icon} alt="banner image" class="w-16" /> 
    </div>

    <h2 class="text-3xl font-semibold text-heading-2">
      {title}
    </h2>
    <Paragraph className="">
      {description}
    </Paragraph>
  </div>
</div>
